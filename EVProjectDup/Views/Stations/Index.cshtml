//                    <a asp-action="Edit" asp-route-id="@item.CSId">Edit</a> |
  //                  <a asp-action="Details" asp-route-id="@item.CSId">Details</a> |
    //                <a asp-action="Delete" asp-route-id="@item.CSId">Delete</a>
    //</div>
}
</div>
